@page "/update/{Id}"
@using Tech_Accounting.Data
@using Tech_Accounting.Models;
@inject Data.TechRepository techrepository
@inject NavigationManager navigationmanager
<h2>Edit Employee</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Date" class="control-label">Date</label>
                <input form="Date" pattern="[0-9]{,2}-[/]-[0-9]{,2}-[/]-[0-9]{,4}" class="form-control" @bind="@obj.TechDate" />
            </div>
            <div class="form-group">
                <label for="Number" class="control-label">Name</label>
                <input form="Number" class="form-control" @bind="@obj.TechNumber" />
            </div>
            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <input form="Description" class="form-control" @bind="@obj.TechDescription" />
            </div>
        </div>
       


    </div>

    
    <div class="row UpdButton">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@UpdateTechProp" value="Update" />

            </div>
        </div>
    </div>
</form>





@code {
    [Parameter]
    public string Id { get; set; }
    Techprop obj = new Techprop();
    protected override async Task OnInitializedAsync()
    {
        obj = await Task.Run(() => techrepository.GetTechPropAsync(Convert.ToInt32(Id)));
    }
    protected async void UpdateTechProp()
    {
        await techrepository.UpdateTechPropAsync(obj);
        navigationmanager.NavigateTo("");
    }
}
